                    HorizontalAlignment="Right">
              <TextBlock Text="290"
                         FontSize="30"
                         FontFamily="Flame"/>
              <TextBlock Text=" ₽"
                         FontFamily="Flame"
                         FontSize="25"
                         Padding="-10,-1,30,0"/>
              <Button Content="Добавить"
                      Command="{Binding ToVopper}"
                      Background="#E53935"
                      Foreground="White"
                      CornerRadius="25"
                      FontSize="20"
                      FontWeight="SemiBold"
                      VerticalAlignment="Center" />
            </StackPanel>
          </StackPanel>
        </Button>

        <Button Width="300"
                Height="300"
                BorderThickness="0"
                Background="Transparent"
                
                CornerRadius="12"

                Margin="30,5,30,15"
                CommandParameter="Burger"
                RenderTransformOrigin="10,10">

          <StackPanel VerticalAlignment="Center"
                      HorizontalAlignment="Center" Spacing="5">

            <Image Height="190"
                   Width="190"
                   Stretch="Uniform"
                   Source="/Assets/Burger and drinkc jpgs/Стейкхаус.png"
                   HorizontalAlignment="Center"/>
            <TextBlock Text="Стейкхаус"
                       FontSize="35"
                       FontWeight="ExtraBlack"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       Padding=""/>
            <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
              <TextBlock Text="290"
                         FontSize="30"
                         FontFamily="Flame"/>
              <TextBlock Text=" ₽"
                         FontFamily="Flame"
                         FontSize="25"
                         Padding="-10,-1,30,0"/>
              <Button Content="Добавить"
                      Command="{Binding ToVopper}"
                      Background="#E53935"
                      Foreground="White"
                      CornerRadius="25"
                      FontSize="20"
                      FontWeight="SemiBold"
                      VerticalAlignment="Center" />
            </StackPanel>
          </StackPanel>
        </Button>

        <Button Width="300"
                Height="300"
                BorderThickness="0"
                Background="Transparent"
                
                CornerRadius="12"

                Margin="90,5,30,15"
                CommandParameter="Burger"
                RenderTransformOrigin="10,10">

          <StackPanel VerticalAlignment="Center"
                      HorizontalAlignment="Center" Spacing="5">

            <Image Height="190"
                   Width="190"
                   Stretch="Uniform"
                   Source="/Assets/Burger and drinkc jpgs/Чизбургер.png"
                   HorizontalAlignment="Center"/>
            <TextBlock Text="Чизбургер"
                       FontSize="35"
                       FontWeight="ExtraBlack"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       Padding=""/>
            <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
              <TextBlock Text="290"
                         FontSize="30"
                         FontFamily="Flame"/>
              <TextBlock Text=" ₽"
                         FontFamily="Flame"
                         FontSize="25"
                         Padding="-10,-1,30,0"/>
              <Button Content="Добавить"
                      Command="{Binding ToVopper}"
                      Background="#E53935"
                      Foreground="White"
                      CornerRadius="25"
                      FontSize="20"
                      FontWeight="SemiBold"
                      VerticalAlignment="Center" />
            </StackPanel>
          </StackPanel>
        </Button>



      </WrapPanel>
    </ScrollViewer>
  </StackPanel>
</UserControl>
