                Margin="85,5,45,15"
                CommandParameter="Burger"
                RenderTransformOrigin="10,10">

          <StackPanel VerticalAlignment="Center"
                      HorizontalAlignment="Center" Spacing="5">

            <Image Height="190"
                   Width="190"
                   Stretch="Uniform"
                   Source="/Assets/Burger and drinkc jpgs/КОКАКОЛА.png"
                   HorizontalAlignment="Center"/>
            <TextBlock Text="Кока-Кола"
                       FontSize="35"
                       FontWeight="ExtraBlack"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       Padding=""/>
            <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
              <TextBlock Text="290"
                         FontSize="30"
                         FontFamily="Flame"/>
              <TextBlock Text=" ₽"
                         FontFamily="Flame"
                         FontSize="25"
                         Padding="-10,-1,30,0"/>
              <Button Content="Добавить"
                      Command="{Binding ToVopper}"
                      Background="#E53935"
                      Foreground="White"
                      CornerRadius="25"
                      FontSize="20"
                      FontWeight="SemiBold"
                      VerticalAlignment="Center" />
            </StackPanel>
          </StackPanel>
        </Button>

