              Background="#E53935"
              Foreground="White"
              CornerRadius="6"
              FontSize="18"
              FontWeight="SemiBold"
              HorizontalAlignment="Center"
              VerticalAlignment="Stretch"/>
          </StackPanel>
        </Button>

        <Button Width="200"
                        Height="200"
                        BorderThickness="0"
                        Background="Transparent"
                
                        CornerRadius="12"
                        Padding="8"
                        Margin="20,0,20,15"
                        Command="{Binding ButtonClick}"
                        CommandParameter="Burger"
                        RenderTransformOrigin="10,10">

          <StackPanel VerticalAlignment="Center"
                      HorizontalAlignment="Center" Spacing="5">

            <Image Height="120"
                   Width="120"
                   Stretch="Uniform"
                   Source="avares://Burger Menu/Assets/Burger and drinkc jpgs/КОФЕ.png"
                   HorizontalAlignment="Center"/>
            <TextBlock Text="Кофе"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#808080"
                       HorizontalAlignment="Center"/>
