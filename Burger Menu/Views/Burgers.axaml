<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="using:Burger_Menu.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Width="825" Height="480" CanResize="False"
        x:Class="Burger_Menu.Burgers"
        x:DataType="vm:MainWindowViewModel"
        Title="Burgers">
 <Window.Styles>
    <StyleInclude Source="/MainWindowStyles.axaml"/>
  </Window.Styles>

  <Grid RowDefinitions="Auto,*,Auto">
    <StackPanel Grid.Row="0">
      <TextBlock Text="Burger Menu:Бургеры"
                 HorizontalAlignment="Center"
                 Padding="5"
                 FontSize="24"/>
    </StackPanel>
    <StackPanel Grid.Row="1">
      <Grid ColumnDefinitions="5*,Auto,*">
        <ScrollViewer >
          <StackPanel Grid.Column="0">
            <Grid ColumnDefinitions="*,*,*"
                  RowDefinitions="*,*,*,*,*,*,*,*,*">

              <StackPanel Grid.Column="0" Grid.Row="0">
                <Button HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Width="150" Classes="Main"

                

                Command="{Binding ButtonClick}"
                CommandParameter="Burger">
                  <StackPanel>
                    <Image  Height="120" HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                      Source="/Assets/Burger and drinkc jpgs/Воппер.png"/>
                    <TextBlock Text="Воппер" HorizontalAlignment="Center"/>
                  </StackPanel>
                </Button>
              </StackPanel>

              <StackPanel Grid.Column="1" Grid.Row="0">
                <Button Width="150"
                        Classes="Main"
                        HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"

                Command="{Binding ButtonClick}"
                CommandParameter="Burger">
                  <StackPanel>
                    <Image Height="120" HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                      Source="avares://Burger Menu/Assets/Burger and drinkc jpgs/Воппер с сыром.png"/>
                    <TextBlock Text="Воппер с сыром" HorizontalAlignment="Center"/>
                  </StackPanel>
                </Button>
              </StackPanel>

              <StackPanel Grid.Column="2" Grid.Row="0">
                <Button Width="150"
                        Classes="Main"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"

                Command="{Binding ButtonClick}"
                CommandParameter="Burger">
                  <StackPanel>
                    <Image Height="120" HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                      Source="avares://Burger Menu/Assets/Burger and drinkc jpgs/Воппер джуниор.png"/>
                    <TextBlock Text="Воппер джуниор" HorizontalAlignment="Center"/>
                  </StackPanel>
                </Button>
              </StackPanel>

              <StackPanel Grid.Column="0" Grid.Row="1">
                <Button Width="150"
                        Classes="Main" Content="Бургер 4"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"

                Command="{Binding ButtonClick}"
                CommandParameter="Burger">
                  <StackPanel>
                    <Image Height="120" HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                      Source="avares://Burger Menu/Assets/Burger and drinkc jpgs/Стейкхаус.png"/>
                    <TextBlock Text="Стейкхаус" HorizontalAlignment="Center"/>
                  </StackPanel>
                </Button>
              </StackPanel>

              <StackPanel Grid.Column="1" Grid.Row="1">
                <Button Width="150"
                        Classes="Main" Content="Бургер 5"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"

                Command="{Binding ButtonClick}"
                CommandParameter="Burger">
                  <StackPanel>
                    <Image Height="120" HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                      Source="avares://Burger Menu/Assets/Burger and drinkc jpgs/Криспи Чикен.png"/>
                    <TextBlock Text="Криспи Чикен" HorizontalAlignment="Center"/>
                  </StackPanel>
                </Button>
              </StackPanel>

              <StackPanel Grid.Column="2" Grid.Row="1">
                <Button Width="150"
                        Classes="Main" Content="Бургер 6"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"

                Command="{Binding ButtonClick}"
                CommandParameter="Burger">
                  <StackPanel>
                    <Image Height="120" HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                      Source="avares://Burger Menu/Assets/Burger and drinkc jpgs/Чизбургер.png"/>
                    <TextBlock Text="Чизбургер" HorizontalAlignment="Center"/>
                  </StackPanel>
                </Button>
              </StackPanel>



            </Grid>
          </StackPanel>
        </ScrollViewer>
        <StackPanel Grid.Column="2">
          <ScrollViewer>
            <Grid RowDefinitions="*,*,*,*">
              <Button HorizontalContentAlignment="Center"
                      VerticalContentAlignment="Center"
                      Width="212" Height="50"
                      Margin="30,4"
                      Classes="Main" Grid.Row="0" Content="Всё меню"
                      Click="SwitchToMain"/>
              <Button HorizontalContentAlignment="Center"
                      VerticalContentAlignment="Center"
                      Width="212" Height="50"
                      Margin="30,4"
                      Classes="Main" Grid.Row="1" Content="Бургеры"/>
              <Button HorizontalContentAlignment="Center"
                      VerticalContentAlignment="Center"
                      Width="212" Height="50"
                      Margin="30,4"
                      Classes="Main" Grid.Row="2" Content="Напитки"
                      Click="SwitchToDrincs"/>
            </Grid>
          </ScrollViewer>
        </StackPanel>
        <StackPanel Grid.Column="1">
          <Border BorderBrush="Black" BorderThickness="1"
                  Width="5" Height="5000" Background="Black"/>
        </StackPanel>
      </Grid>
    </StackPanel>
    <Grid ColumnDefinitions="5*,*" RowDefinitions="*,*" Grid.Row="2">
      <Border Grid.Row="0" Grid.Column="1"
              BorderBrush="Black" BorderThickness="1"
              Width="5000" Height="5" Background="Black"/>
      <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left"
                          Grid.Row="6" Grid.Column="2" Orientation="Horizontal">

        <TextBlock Margin="5,0,5,0" HorizontalAlignment="Center"
        VerticalAlignment="Center" Text="Цена:"/>

        <TextBlock HorizontalAlignment="Center"
        VerticalAlignment="Center" Text="{Binding Price}"/>
      </StackPanel>
      <StackPanel HorizontalAlignment="Right" Grid.Row="1"
                  Orientation="Horizontal">
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center" Text=""/>
      </StackPanel>
    </Grid>
  </Grid>
</Window>