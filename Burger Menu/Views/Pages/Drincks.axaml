                        CornerRadius="12"
                        Padding="8"
                        Margin="20,0,20,15"
                        Command="{Binding ButtonClick}"
                        CommandParameter="Burger"
                        RenderTransformOrigin="10,10">

          <StackPanel VerticalAlignment="Center"
                      HorizontalAlignment="Center" Spacing="5">

            <Image Height="120"
                   Width="120"
                   Stretch="Uniform"
                   Source="/Assets/Burger and drinkc jpgs/FUSE TEA.png"
                   HorizontalAlignment="Center"/>
