        </Button>

        <Button Width="200"
                        Height="200"
                        BorderThickness="0"
                        Background="Transparent"
                
                        CornerRadius="12"
                        Padding="8"
                        Margin="20,0,20,15"
                        Command="{Binding ButtonClick}"
                        CommandParameter="Burger"
