<UserControl
    x:Class="Burger_Menu.Views.Pages.Burgers"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    xmlns:vm="clr-namespace:Burger_Menu.ViewModels"
    x:DataType="vm:BurgersViewModel">
  <StackPanel Grid.Column="0">


    <ScrollViewer Height="900">
      <WrapPanel Margin="10">

        <Button Width="300"
                Height="300"
                BorderThickness="0"
                Background="Transparent"
                
                CornerRadius="12"

                Margin="85,5,45,15"
                CommandParameter="Burger"
                RenderTransformOrigin="10,10">

          <StackPanel VerticalAlignment="Center"
                      HorizontalAlignment="Center" Spacing="5">

            <Image Height="190"
                   Width="190"
                   Stretch="Uniform"
                   Source="/Assets/Burger and drinkc jpgs/Воппер.png"
                   HorizontalAlignment="Center"/>
            <TextBlock Text="Воппер"
                       FontSize="35"
                       FontWeight="ExtraBlack"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       Padding=""/>
            <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
              <TextBlock Text="290"
                         FontSize="30"
                         FontFamily="Flame"/>
              <TextBlock Text=" ₽"
                         FontFamily="Flame"
                         FontSize="25"
                         Padding="-10,-1,30,0"/>
              <Button Content="Добавить"
                      Command="{Binding ToVopper}"
                      Background="#E53935"
                      Foreground="White"
                      CornerRadius="25"
                      FontSize="20"
                      FontWeight="SemiBold"
                      VerticalAlignment="Center" />
            </StackPanel>
          </StackPanel>
        </Button>

        <Button Width="300"
                Height="300"
                BorderThickness="0"
                Background="Transparent"
                
                CornerRadius="12"

                Margin="30,5,30,15"
                CommandParameter="Burger"
                RenderTransformOrigin="10,10">

          <StackPanel VerticalAlignment="Center"
                      HorizontalAlignment="Center" Spacing="5">

            <Image Height="190"
                   Width="190"
                   Stretch="Uniform"
                   Source="/Assets/Burger and drinkc jpgs/Воппер джуниор.png"
                   HorizontalAlignment="Center"/>
            <TextBlock Text="Воппер Джуниор"
                       FontSize="32"
                       FontWeight="ExtraBlack"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Padding=""/>
            <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
              <TextBlock Text="290"
                         FontSize="30"
                         FontFamily="Flame"
                         Padding="20,0,0,0"/>
              <TextBlock Text=" ₽"
                         FontFamily="Flame"
                         FontSize="25"
                         Padding="-10,-1,50,0"/>
              <Button Content="Добавить"
                      Command="{Binding ToVopper}"
                      Background="#E53935"
                      Foreground="White"
                      CornerRadius="25"
                      FontSize="20"
                      FontWeight="SemiBold"
                      Margin="0,0,45,0"
                      VerticalAlignment="Center" />
            </StackPanel>
          </StackPanel>
        </Button>

        <Button Width="300"
                Height="300"
                BorderThickness="0"
                Background="Transparent"
                
                CornerRadius="12"

                Margin="90,5,30,15"
                CommandParameter="Burger"
                RenderTransformOrigin="10,10">

          <StackPanel VerticalAlignment="Center"
                      HorizontalAlignment="Center" Spacing="5">

            <Image Height="190"
                   Width="190"
                   Stretch="Uniform"
                   Source="/Assets/Burger and drinkc jpgs/Криспи Чикен.png"
                   HorizontalAlignment="Center"/>
            <TextBlock Text="Криспи Чикен"
                       FontSize="35"
                       FontWeight="ExtraBlack"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       Padding=""/>
            <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
              <TextBlock Text="290"
                         FontSize="30"
                         FontFamily="Flame"/>
              <TextBlock Text=" ₽"
                         FontFamily="Flame"
                         FontSize="25"
                         Padding="-10,-1,30,0"/>
              <Button Content="Добавить"
                      Command="{Binding ToVopper}"
                      Background="#E53935"
                      Foreground="White"
                      CornerRadius="25"
                      FontSize="20"
                      FontWeight="SemiBold"
                      VerticalAlignment="Center" />
            </StackPanel>
          </StackPanel>
        </Button>


        <Button Width="300"
                Height="300"
                BorderThickness="0"
                Background="Transparent"
                
                CornerRadius="12"

                Margin="85,5,45,15"
                CommandParameter="Burger"
                RenderTransformOrigin="10,10">

          <StackPanel VerticalAlignment="Center"
                      HorizontalAlignment="Center" Spacing="5">

            <Image Height="190"
                   Width="190"
                   Stretch="Uniform"
                   Source="/Assets/Burger and drinkc jpgs/Воппер с сыром.png"
                   HorizontalAlignment="Center"/>
            <TextBlock Text="Воппер с сыром"
                       FontSize="35"
                       FontWeight="ExtraBlack"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       Padding=""/>
