<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Burger_Menu.Vopper">
  <Grid RowDefinitions="Auto,Auto">
    
    <Grid.Background>
      <ImageBrush Source="/Assets/Background/productDetails.jpg" Stretch="UniformToFill"/>
    </Grid.Background>
    
    <Grid Grid.Row="0" ColumnDefinitions="Auto,Auto">
      <StackPanel Grid.Column="0">
        <Image Source="/Assets/Burger and drinkc jpgs/Воппер.png" Margin="10,30"/>
      </StackPanel>
      <StackPanel Grid.Column="1" Margin="10,60">
        <TextBlock Text="Приготовленный на огне бифштекс из 100% говядины, сочный помидор," Margin="0,30,0,0"/>
        <TextBlock Text="свежий нарезанный салат, густой майонез, хрустящие огурчики" Margin="0,5,0,0"/>
        <TextBlock Text="и свежий лук в мягкой булочке с кунжутом." Margin="0,5,0,0"/>
        <TextBlock Text="Цена: 289.99 ₽" FontSize="28" Margin="0,20,0,0"
                   Foreground="Black"/>
      </StackPanel>
    </Grid>
    <StackPanel>
      <ScrollViewer Width="2000">
        <StackPanel>
          
        </StackPanel>
      </ScrollViewer>
    </StackPanel>
  </Grid>
  
</UserControl>
