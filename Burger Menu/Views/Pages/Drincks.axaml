            <Image Height="120"
                   Width="120"
                   Stretch="Uniform"
                   Source="/Assets/Burger and drinkc jpgs/МИНЕРАЛЬНАЯ ВОДА.png"
                   HorizontalAlignment="Center"/>
            <TextBlock Text="Минеральная Вода"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#808080"
                       HorizontalAlignment="Center"/>
