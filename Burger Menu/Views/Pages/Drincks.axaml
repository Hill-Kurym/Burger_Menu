<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:Burger_Menu.ViewModels"
             x:DataType="vm:MainWindowViewModel"
             x:Class="Burger_Menu.Drincks">
  <StackPanel Grid.Column="0">


    <ScrollViewer Height="900">
      <WrapPanel Margin="10">

        <Button Width="200"
                      Height="200"
                      BorderThickness="0"
                      Background="Transparent"
                
                      CornerRadius="12"
                      Padding="8"
                      Margin="20,0,20,15"
                      Command="{Binding ButtonClick}"
                      CommandParameter="Burger"
                      RenderTransformOrigin="10,10">

          <StackPanel VerticalAlignment="Center"
                      HorizontalAlignment="Center" Spacing="5">

            <Image Height="120"
                   Width="120"
                   Stretch="Uniform"
                   Source="/Assets/Burger and drinkc jpgs/КОКАКОЛА.png"
                   HorizontalAlignment="Center"/>
            <TextBlock Text="Кока-Кола"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#808080"
                       HorizontalAlignment="Center"/>
            <Button Content="Добавить"
              Background="#E53935"
              Foreground="White"
              CornerRadius="6"
              FontSize="18"
              FontWeight="SemiBold"
              HorizontalAlignment="Center"
              VerticalAlignment="Stretch"/>
          </StackPanel>
        </Button>

        <Button Width="200"
                        Height="200"
                        BorderThickness="0"
                        Background="Transparent"
                
                        CornerRadius="12"
                        Padding="8"
                        Margin="20,0,20,15"
                        Command="{Binding ButtonClick}"
                        CommandParameter="Burger"
                        RenderTransformOrigin="10,10">

          <StackPanel VerticalAlignment="Center"
                      HorizontalAlignment="Center" Spacing="5">

            <Image Height="120"
                   Width="120"
                   Stretch="Uniform"
                   Source="/Assets/Burger and drinkc jpgs/ФАНТА.png"
                   HorizontalAlignment="Center"/>
            <TextBlock Text="ФАНТА"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#808080"
                       HorizontalAlignment="Center"/>
            <Button Content="Добавить"
              Background="#E53935"
              Foreground="White"
              CornerRadius="6"
              FontSize="18"
              FontWeight="SemiBold"
              HorizontalAlignment="Center"
              VerticalAlignment="Stretch"/>
          </StackPanel>
        </Button>

        <Button Width="200"
                        Height="200"
                        BorderThickness="0"
                        Background="Transparent"
                
                        CornerRadius="12"
                        Padding="8"
                        Margin="20,0,20,15"
                        Command="{Binding ButtonClick}"
                        CommandParameter="Burger"
                        RenderTransformOrigin="10,10">

          <StackPanel VerticalAlignment="Center"
                      HorizontalAlignment="Center" Spacing="5">

            <Image Height="120"
                   Width="120"
                   Stretch="Uniform"
                   Source="/Assets/Burger and drinkc jpgs/СПРАЙТ.png"
                   HorizontalAlignment="Center"/>
